<div class="m-4">
  <%= form_for(task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="form-group">
      <% unless task.title.nil? %>
        <%= f.label :completed %>
        <%= f.check_box :completed %>
      <%end %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>

